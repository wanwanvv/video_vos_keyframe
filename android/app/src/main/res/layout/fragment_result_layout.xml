<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <org.salient.artplayer.VideoView
        android:id="@+id/result_player"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/output_button"
            android:layout_gravity="center"
            android:layout_width="@dimen/fb_opendir_width"
            android:layout_height="@dimen/fb_opendir_heigt"
            android:paddingBottom="@dimen/fb_opendir_paddingBottom"
            android:paddingLeft="@dimen/fb_opendir_paddingLeft"
            android:paddingRight="@dimen/fb_opendir_paddingRight"
            android:paddingTop="@dimen/fb_opendir_paddingTop"
            android:layout_marginLeft="@dimen/fb_opendir_marginLeft"
            android:layout_marginRight="@dimen/fb_opendir_marginRight"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="@dimen/fb_opendir_borderWidth"
            fancy:fb_defaultColor="@color/fb_defaultColor"
            fancy:fb_focusColor="@color/fb_focusColor"
            fancy:fb_fontIconResource="&#xf04b;"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="@dimen/fb_opendir_radius"
            fancy:fb_text="OUTPUT VIDEO"
            fancy:fb_disabledColor="@color/colorTitleLine"
            fancy:fb_textSize="@dimen/fb_opendir_textSize"
            fancy:fb_textColor="#FFFFFF"
            android:layout_marginTop="@dimen/fb_opendir_marginBottom"
            android:layout_marginBottom="@dimen/fb_opendir_marginBottom"/>

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/save_annotation_button"
            android:layout_width="@dimen/fb_opendir_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/fb_opendir_marginLeft"
            android:layout_marginTop="@dimen/fb_opendir_marginBottom"
            android:layout_marginRight="@dimen/fb_opendir_marginRight"
            android:layout_marginBottom="@dimen/fb_opendir_marginBottom"
            android:paddingLeft="@dimen/fb_opendir_paddingLeft"
            android:paddingTop="@dimen/fb_opendir_paddingTop"
            android:paddingRight="@dimen/fb_opendir_paddingRight"
            android:paddingBottom="@dimen/fb_opendir_paddingBottom"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="@dimen/fb_opendir_borderWidth"
            fancy:fb_defaultColor="@color/fb_defaultColor"
            fancy:fb_disabledColor="@color/colorTitleLine"
            fancy:fb_focusColor="@color/fb_focusColor"
            fancy:fb_fontIconResource="&#xf07c;"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="@dimen/fb_opendir_radius"
            fancy:fb_text="SAVE ANNOTAION"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textSize="@dimen/fb_opendir_textSize" />
        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/save_mask_button"
            android:layout_gravity="center"
            android:layout_width="@dimen/fb_opendir_width"
            android:layout_height="@dimen/fb_opendir_heigt"
            android:paddingBottom="@dimen/fb_opendir_paddingBottom"
            android:paddingLeft="@dimen/fb_opendir_paddingLeft"
            android:paddingRight="@dimen/fb_opendir_paddingRight"
            android:paddingTop="@dimen/fb_opendir_paddingTop"
            android:layout_marginLeft="@dimen/fb_opendir_marginLeft"
            android:layout_marginRight="@dimen/fb_opendir_marginRight"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="@dimen/fb_opendir_borderWidth"
            fancy:fb_defaultColor="@color/fb_defaultColor"
            fancy:fb_focusColor="@color/fb_focusColor"
            fancy:fb_fontIconResource="&#xf14b;"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="@dimen/fb_opendir_radius"
            fancy:fb_text="OUTPUT MASK"
            fancy:fb_disabledColor="@color/colorTitleLine"
            fancy:fb_textSize="@dimen/fb_opendir_textSize"
            fancy:fb_textColor="#FFFFFF"
            android:layout_marginTop="@dimen/fb_opendir_marginBottom"
            android:layout_marginBottom="@dimen/fb_opendir_marginBottom"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/maskindex_floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            fancy:fab_colorNormal="@color/white"
            fancy:fab_icon="@drawable/sort_grey"
            fancy:fab_colorPressed="@color/white_pressed"/>
            />
    </RelativeLayout>
</LinearLayout>
